@require '../../main'

.event-data-container
  .controls
    margin: 20px 0

    .btn
      margin-right: 20px

.upload-container
  position: relative

  .upload-overlay
    position: absolute
    top: -5%
    left: -1%
    width: 101%
    height: 105%
    background-color: rgba(255, 255, 255, 0.9)
    display: none
    border: 1px solid _medium_grey
    default-border-radius()

    .upload-loader
      background: url('/assets/images/loader.gif') center center no-repeat
      background-size: auto 100%
      height: 40px
      margin-top: 48px

  .event-upload-image-btn
    margin: 10px 0

  .fa
    font-size: 1.2em
    margin-right: 10px
    display: none
    color: #3AB343

  .image-name-placeholder
    display: inline-block
