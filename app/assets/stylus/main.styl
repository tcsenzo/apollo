@require 'common/variables'
@require 'common/mixins'
@require 'common/components'
@require '_partials/*'

body
  font-family: main-font
  font-size: base-font-size
  background-color: bg-color

@media (min-width: 1200px)
    .container
        max-width: 1150px

a
  color: inherit
  text-decoration: none
  font-weight: 900
  display: inline-block
  default-transition()
  &:active
    transform: translateY(1px)
  &:hover
    color: inherit


ul, li
  list-style: none
  clearfix()

h1, h2, h3
  font-size: base-font-size
  font-weight: normal

.title
  font-size: 1.8em
  font-weight: bold

.subtitle
  font-size: 1.4em
  font-weight: normal
  margin: 0 0 10px 0

.page-wrapper
  margin-top: 100px

.side-menu-container + .page-wrapper
  margin-left: 120px

.before-container
  width: 100%
  margin: 0 auto

.container
  default-transition()
  box-sizing: border-box

.centered-box
  .title
    text-align: center
    margin: 0 0 30px
  .content
    background-color: #fff
    default-border-radius()
    back-box-shadow()
    padding: 20px 40px

.theater-select
  margin-bottom: 20px
  .btn, .btn-default
    background-color: #fff
    color: #333
    border-color: _grey
    font-size: 1.8em
    font-weight: bold
    &:active
      background-color: _grey
      color: #333

  .fa-plus
    margin-right: 10px
  .fa-caret-down
    margin-left: 10px
