-
  var menus = [
    {
      'name': t('sideMenu.events'),
      'iconClass': 'fa fa-list',
      'path': '/teatros/' + req.currentTheater.id + '/eventos'
    },
    {
      'name': t('sideMenu.sales'),
      'iconClass': 'fa fa-line-chart',
      'path': '/teatros/' + req.currentTheater.id + '/vendas'
    },
    {
      'name': t('sideMenu.newEvent'),
      'iconClass': 'fa fa-plus',
      'path': '/teatros/' + req.currentTheater.id + '/eventos/novo'
    },
    {
      'name': t('sideMenu.newTheater'),
      'iconClass': 'fa fa-plus',
      'path': '/teatros/novo'
    },
  ];

nav
  ul.list-container
  
    each menu in menus
      li(class="#{activeMenu == menu.name ? 'active' : ''}").list-item
        a(href="#{menu.path}")
          div.item-icon
            i(class="#{menu.iconClass}")
          div.item-text
            div #{menu.name}
