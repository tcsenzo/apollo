extends /base

block side-menu

block container
  div.title= t('theaters.new.title')
  form(action="/teatros/novo" method="POST")
    div.form-group
      label(for="name")= t("theaters.new.name")
      input(type="text" name="name" data-validation="required" placeholder=t("theaters.new.name")).form-control
    div.form-group
      label(for="street")= t("theaters.new.street")
      input(type="text" name="address[street]" data-validation="required" placeholder=t("theaters.new.street")).form-control
    div.form-group
      div.input-group.col-md-2
        label(for="number")= t("theaters.new.number")
        input(type="text" name="address[number]" data-validation="required number" placeholder=t("theaters.new.number")).form-control
    div.form-group
      div.input-group.col-md-3
        label(for="district")= t("theaters.new.district")
        input(type="text" name="address[district]" data-validation="required" placeholder=t("theaters.new.district")).form-control
    div.form-group
      div.input-group.col-md-3
        label(for="city")= t("theaters.new.city")
        input(type="text" name="address[city]" data-validation="required" placeholder=t("theaters.new.city")).form-control
    div.form-group
      div.input-group.col-md-2
        label(for="state")= t("theaters.new.state")
        input(type="text" name="address[state]" data-validation="required" placeholder=t("theaters.new.state")).form-control
    div.form-group
      div.input-group.col-md-3
        label(for="country")= t("theaters.new.country")
        input(type="text" name="address[country]" data-validation="required" placeholder=t("theaters.new.country")).form-control
    div.form-group
      div.input-group.col-md-2
        label(for="zip_code")= t("theaters.new.zip_code")
        input(type="text" name="address[zip_code]" data-validation="required" data-mask="00000-000" placeholder=t("theaters.new.zip_code")).form-control
    button(type="submit").btn.btn-default= t("theaters.new.save")
