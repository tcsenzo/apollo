extends /base

block active-menu
  - var activeMenu = t('sideMenu.newEvent');

block container
  include /shared/_user-theaters
  div.subtitle= t('events.new.title')
  form(method="POST").new-event-form
    input(type="hidden" name="theater[id]" value="#{theaterId}")
    div.form-group.upload-container
      div.upload-overlay
        div.upload-loader
      label(for="imageUpload")= t("events.new.image")
      input(type="file" name="imageUpload" placeholder=t("events.new.name")).form-file.event-image-input
      button.btn.btn-default.event-upload-image-btn= t('events.new.upload')
      input(type="hidden" name="image" value="" data-validation="required").image-hidden-field
      div
        i.fa.fa-check
        p.image-name-placeholder= t('events.new.noImage')
    div.form-group
      label(for="name")= t("events.new.name")
      input(type="text" name="name" data-validation="required" placeholder=t("events.new.name")).form-control
    div.form-group
      label(for="description")= t("events.new.description")
      textarea(rows="4" name="description" data-validation="required" placeholder=t("events.new.description")).form-control
    div.form-group
      label(for="price")= t("events.new.price")
      div.input-group.col-md-3
        div.input-group-addon R$
        input(type="text" name="price" data-validation="required" placeholder=t("events.new.price") data-mask="#.##0,00" data-mask-reverse="true").form-control
    div.form-group
      label(for="original_price")= t("events.new.original_price")
      div.input-group.col-md-3
        div.input-group-addon R$
        input(type="text" name="original_price" data-validation="required" placeholder=t("events.new.original_price") data-mask="#.##0,00" data-mask-reverse="true").form-control
    div.form-group
      div.input-group.col-md-2
        label(for="available_quantity")= t("events.new.available_quantity")
        input(type="text" name="available_quantity" data-validation="required number" placeholder=t("events.new.available_quantity")).form-control
    div.form-group
      div.input-group.col-md-2
        label(for="scheduled_date")= t("events.new.scheduled_date")
        input(type="text" name="scheduled_date" data-validation="required date" placeholder=t("events.new.scheduled_date") data-mask="00/00/0000").form-control
    div.form-group
      div.input-group.col-md-2
        label(for="scheduled_hour")= t("events.new.scheduled_hour")
        input(type="text" name="scheduled_hour" data-validation="required" placeholder=t("events.new.scheduled_hour") data-mask="00:00").form-control
    
    button(type="submit").btn.btn-default= t('events.new.save')
